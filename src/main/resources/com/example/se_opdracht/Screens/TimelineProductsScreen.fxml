      <Pane layoutY="80.0" prefHeight="570.0" prefWidth="1000.0">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#314151" height="570.0" stroke="BLACK" strokeType="INSIDE" width="1000.0" />
            <ListView fx:id="productList" layoutX="14.0" layoutY="85.0" onMouseClicked="#FillTable" prefHeight="200.0" prefWidth="200.0" />
