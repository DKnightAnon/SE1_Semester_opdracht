                  <TextField fx:id="purchasePriceTextfield" layoutX="61.0" layoutY="317.0" prefHeight="25.0" prefWidth="174.0" promptText="Purchase price" />
                  <Button fx:id="addNewPurchaseButton" layoutX="89.0" layoutY="356.0" mnemonicParsing="false" onAction="#addNewPurchase" text="Add new purchase" />
